extends layout

block extrahead
  link(rel="stylesheet" href="/stylesheets/shifts.css")
  script(src="javascripts/shifts.js" type="text/javascript")

block content
  #contact_detail.modal.fade(tabindex="-1" aria-hidden="true" )
    .modal-dialog.modal-lg
      .modal-content(style="margin:10")
        .modal-header
          h5.modal-title Add or modify contact
          button.btn-close(type="button" data-bs-dismiss='modal' aria-label='Close')
        .modal-body.row
          table
            tbody
              tr
                th.py-3 First name
                td
                  input#first_name(type="text" size="24" name="first_name")
              tr
                th.py-3 Last name
                td
                  input#last_name(type="text" size="24" name="last_name")
              tr
                th.py-3 SMS
                td
                  input#sms(type='text' size="20" name="sms")
              tr
                th.py-3 Phone
                td
                 input#phone(type='text' size="20" name="sms")
              tr
                th.py-3 Email
                td
                  input#email(type='email' size="48" name='email')
              tr
                th.py-3 Expert?
                td
                  input#expert(type="checkbox" name="expert")
        .modal-footer
          button.btn.btn-info(onclick="SubmitContact()") Submit


  div.main-container.main-container-nav
    #navbar.navbar.fixed-top.navbar-light.bg-light
      .container-fluid
        .d-flex
          button.btn.btn-primary(onclick="ShowDetail(null)")
            span
              | Add new &nbsp
              i.fas.fa-solid.fa-plus
              i.fas.fa-user
        //.d-flex
          .input-group.me-3
            button.btn.btn-warning.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false') Test larm
            ul.dropdown-menu.dropdown-menu-end
              li
                a.dropdown-item(href='#') Level 0
              li
                a.dropdown-item(href='#') Level 1
              li
                a.dropdown-item(href='#') Level 2
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href='#') Level 3
    .row
      .col-lg-6
        h3 Current shifters
        hr
        ul#on_shift
      .col-lg-6
        h3 All contacts
        hr
        table.table.table-hover.table-striped(style="width:50%")
          thead
            tr
              th Name
              th On shift?
          tbody#shift_table

        button.btn.btn-warning(onclick="SubmitShifts()") Set shifters
        span &nbsp;

  script.
    $(document).ready(function() {
      PopulateTable();
      PopulateOnShift();
    });
    window.onclick = function(event) {
      var elems = document.getElementsByClassName("modal");
      for (var i = 0; i < elems.length; i++)
        if (event.target == elems[i]) elems[i].style.display = 'none';
    }
