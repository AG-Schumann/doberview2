extends layout
block extrahead
  script(src="javascripts/hosts_scripts.js" type="text/javascript")

block content
  div.main-container
    #hostAccordion.accordion
      each host in hosts
        .accordion-item
          h2.accordion-header(id=`${host}_header`)
            button.accordion-button(type='button' data-bs-toggle='collapse' data-bs-target=`#${host}_tables`)
              | #{host.toUpperCase()}
          .accordion-collapse.collapse(id=`${host}_tables`)
            .accordion-body
              iframe(src=`${grafana_sysmon_url}&var-hostname=${host}` style="width:100%;height:720px")
