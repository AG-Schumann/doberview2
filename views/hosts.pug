extends layout
block extrahead
  script(src="javascripts/host_scripts.js" type="text/javascript")
  script(src="javascripts/highcharts.js" type="text/javascript")
  link(rel="stylesheet" href="stylesheets/hosts.css")
  link(rel="stylesheet" href="stylesheets/highcharts.css")

block content
  div.main-container
    each host in hosts
      div.container(id=`div_${host}`)
        div.row
          h3 #{host}
          //
            span Load:&nbsp;
            span(id=`load_${host}`)
            br
            span Temperature:&nbsp;
            span(id=`temp_${host}`)
            br
            span Top CPU:&nbsp;
            span(id=`cpu_${host}`)
            br
            span Memory:&nbsp;
            span(id=`mem_${host}`)
            br
            span IO:&nbsp;
            span(id=`io_${host}`)
            br
          div.row
            iframe(src=`${grafana_sysmon_url}&var-hostname=${host}` title="System monitor" style="width:100%;height:360px")


  script.
    $(document).ready(function() {
      SetHosts();
    });
