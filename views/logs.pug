extends layout

block extrahead
  link(href="https://unpkg.com/tabulator-tables@5.0.10/dist/css/tabulator.min.css" rel="stylesheet")
  script(type="text/javascript" src="https://unpkg.com/tabulator-tables@5.0.10/dist/js/tabulator.min.js")
  script(type="text/javascript" src="javascripts/log_scripts.js")

block content
  div.main_container(style="width:95%;padding-left:65px")
    span Minimum severity: &nbsp;
    select#min_severity
      option(value=20) Info
      option(value=30 selected) Warning
      option(value=40) Error
      option(value=50) Critial
    span &nbsp; &nbsp; Get this many: &nbsp;
    input#get_num(type="number" min="30" max="3000" value="200")
    span &nbsp; &nbsp Name: &nbsp;
    input#get_name(type="text")
    span &nbsp; &nbsp
    button.btn.btn-info(onclick="GetLogs()") Fetch
    div#log_table

  script.
    $(document).ready(function() {
      GetLogs();
    });
